@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer
@using Web.DTOs.Category
@model List<CategoryDTO>
@using Web.DTOs

@{
    ViewData["Title"] = localizer["ViewTitle"];
}

<h2 class="mb-3">@ViewData["Title"]</h2>

<table class="table mt-3">
    <thead>
        <tr>
            <th>@localizer["NameTableHeader"]</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count == 0)
        {
            <tr><td class="align-middle">@localizer["NoCategoriesToRestoreText"]</td></tr>
        }
        @foreach (var category in Model)
        {
            <tr>
                <td class="align-middle">@category.Name</td>
                <td class="align-middle">
                    <form asp-action="Restore" asp-route-id="@category.Id" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-primary">@localizer["RestoreCategoryButton"]</button>
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>